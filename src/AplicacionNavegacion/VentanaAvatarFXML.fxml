<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="AplicacionNavegacion.AvatarChooserController"
            prefWidth="600" prefHeight="450">

    <!-- TÍTULO -->
    <top>
        <Label text="Seleccionar avatar"
               style="-fx-font-size: 24px; -fx-padding: 15; -fx-background-color: #2196F3; -fx-text-fill: white;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- GALERÍA -->
            <VBox spacing="10">
                <Label text="Avatares disponibles:" style="-fx-font-size: 16px;"/>
                <ScrollPane prefWidth="250" prefHeight="300">
                    <content>
                        <GridPane fx:id="avatarGrid" hgap="10" vgap="10"/>
                    </content>
                </ScrollPane>
            </VBox>

            <!-- PREVIEW -->
            <VBox spacing="10">
                <Label text="Vista previa:" style="-fx-font-size: 16px;"/>
                <ImageView fx:id="previewImage"
                           fitWidth="200" fitHeight="200"
                           preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, black, 20, 0, 0, 0);" />

                <Button fx:id="bLoadImage" text="Cargar imagen..." />
            </VBox>

        </HBox>
    </center>

    <!-- BOTONES ABAJO -->
    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="bAccept" text="Aceptar" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="bCancel" text="Cancelar"
                    style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
