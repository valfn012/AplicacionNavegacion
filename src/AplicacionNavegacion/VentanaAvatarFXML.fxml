<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450" prefWidth="600" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AplicacionNavegacion.AvatarChooserController">
    <top>
        <Label style="-fx-font-size: 24px; -fx-padding: 15; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Seleccionar avatar" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <HBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px;" text="Avatares disponibles:" />
            <ListView fx:id="listaAvatares" prefHeight="200.0" prefWidth="200.0" />
            </VBox>            
            <VBox spacing="10">
                <Label style="-fx-font-size: 16px;" text="Vista previa:" />
                <ImageView fx:id="previewImage" fitHeight="200" fitWidth="200" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, black, 20, 0, 0, 0);" />

                <Button fx:id="bLoadImage" onAction="#loadIm" text="Cargar imagen..." />
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Button fx:id="bAccept" onAction="#aceptar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Aceptar" />
            <Button fx:id="bCancel" onAction="#cancelar" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Cancelar" />
        </HBox>
    </bottom>
</BorderPane>
